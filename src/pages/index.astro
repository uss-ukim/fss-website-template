---
import "../styles/global.css";

import { getCollection } from "astro:content";

const organizations = await getCollection("organizations");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>FSS Website</title>
  </head>
  <body class="flex flex-col items-center justify-center gap-4">
    <h1 class="text-center text-3xl font-bold lg:text-4xl lg:leading-tight lg:tracking-tight">
      Факултетски Студентски Собранија
    </h1>

    <h2 class="mb-8 text-center text-lg lg:text-xl lg:leading-tight lg:tracking-tight">
      Добредојдовте на веб страницата на Факултетските Студентски Собранија
    </h2>

    <div class="flex flex-wrap items-center justify-center gap-4">
      {
        organizations.map((organization) => (
          <a
            href={`/${organization.id}`}
            class="flex items-center justify-center rounded-lg bg-white p-4 shadow-md transition-all duration-300 hover:scale-105 hover:shadow-lg"
          >
            <div class="container flex flex-col items-center justify-center gap-4 py-8">
              <img src={organization.data.logo} alt="FSS Logo" class="aspect-square h-16" />

              <p class="lg:text-md w-64 text-center text-sm">{organization.data.long_name}</p>
            </div>
          </a>
        ))
      }
    </div>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
